<%- include('layout/head.ejs') %>
<%- include('layout/navbar.ejs') %>

<section class='orders'>
  <div class='container'>
    <h1>All orders</h1>
    <% if(messages.success) { %>
    <div id='success-alert' role='alert'>
      <p><%= messages.success %></p>
    </div>
    <% } %>
    <table>
      <thead>
        <tr>
          <th>Orders</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% if(orders.length) { %>
          <% orders.forEach((order) => { %>
            <tr>
              <td>
                <a class='link' href="/"><%= order._id %></a>
              </td>
              <td>
                <%= order.address %>
              </td>
              <td>
                <%= order.phone %>
              </td>
              <td>
                <%= moment(order.createdAt).format('hh:mm A') %>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr >
            <td style="border: none">No orders found!</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>

<%- include('layout/footer.ejs') %>